{
  "family": "multi-docker-task-definition",
  "executionRoleArn": "arn:aws:iam::****************:role/ecsTaskExecutionRole",
  "networkMode": "bridge",
  "placementConstraints": [],
  "requiresCompatibilities": [
        "EC2"
    ],
  "containerDefinitions": [
    {
      "name": "client",
      "image": "ECR/multi-client",
      "memory": 128,
      "hostname": "client",
      "portMappings": [],
      "essential": false
    },
    {
      "name": "server",
      "image": "ECR/multi-server",
      "memory": 128,
      "hostname": "api",
      "portMappings": [],
      "essential": false,
      "environment": [
        {
          "name": "PGDATABASE",
          "value": "POSTGRES_DB"
        },
        {
          "name": "PGHOST",
          "value": "POSTGRESS_HOST"
        },
        {
          "name": "PGPASSWORD",
          "value": "POSTGRES_PASSWORD"
        },
        {
          "name": "PGPORT",
          "value": "5432"
        },
        {
          "name": "PGUSER",
          "value": "POSTGRES_USER"
        },
        {
          "name": "REDIS_HOST",
          "value": "REDIS_ENDPOINT"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ]
    },
    {
      "name": "worker",
      "image": "ECR/multi-worker",
      "memory": 128,
      "hostname": "worker",
      "portMappings": [],
      "essential": false,
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "REDIS_ENDPOINT"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "ECR/multi-nginx",
      "memory": 128,
      "hostname": "nginx",
      "essential": true, 
      "links": [
        "client",
        "server"
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        }
      ]
    } 
  ],    
  "volumes": [
    {
      "name": "awseb-logs-client",
      "host": {
        "sourcePath": "/var/log/containers/client"
      }
    },
    {
      "name": "awseb-logs-server",
      "host": {
        "sourcePath": "/var/log/containers/server"
      }
    },
    {
      "name": "awseb-logs-worker",
      "host": {
        "sourcePath": "/var/log/containers/worker"
      }
    },
    {
      "name": "awseb-logs-nginx",
      "host": {
        "sourcePath": "/var/log/containers/nginx"
      }
    }
  ]
}
